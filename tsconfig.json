{
  "compilerOptions": {
    "incremental": true,
    "target": "ES6",
    "module": "commonjs",
    "jsx": "react-jsx",
    "sourceMap": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",
    "types": [
      "node"
    ]
  },
  "exclude": [
    "test",
    "release/build",
    "release/app/dist",
    ".erb/dll"
  ]
}